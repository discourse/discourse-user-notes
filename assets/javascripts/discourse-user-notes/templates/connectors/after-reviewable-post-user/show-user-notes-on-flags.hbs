{{#if this.userNotesCount}}
  <DButton
    @translatedTitle={{this.userNotesTitle}}
    @action={{action "showUserNotes"}}
    class="btn btn-flat"
  >
    {{#if this.emojiEnabled}}
      <img
        src={{this.emojiUrl}}
        title={{this.userNotesTitle}}
        alt="pencil"
        class="emoji"
      />
    {{else}}
      {{d-icon "sticky-note"}}
    {{/if}}
  </DButton>
{{/if}}